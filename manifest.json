{
  "manifest_version": 3,
  "name": "Comick.io Downloader",
  "version": "1.1",
  "description": "Downloads manga chapters from comick.io with batch download support",
  "permissions": ["activeTab", "downloads", "scripting", "tabs", "storage"],
  "host_permissions": ["*://*.comick.io/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}




